<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miniplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PopActivity"
            android:label="@string/category_pop"
            android:parentActivityName=".MainActivity">
            <!-- add meta-data parent activity to support 4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".RockActivity"
            android:label="@string/category_rock"
            android:parentActivityName=".MainActivity">
            <!-- add meta-data parent activity to support 4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".MyLibraryActivity"
            android:label="@string/category_library"
            android:parentActivityName=".MainActivity">
            <!-- add meta-data parent activity to support 4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ClassicalActivity"
            android:label="@string/category_classical"
            android:parentActivityName=".MainActivity">
            <!-- add meta-data parent activity to support 4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing"
            android:parentActivityName=".MainActivity">
            <!-- add meta-data parent activity to support 4.0 and lower-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>